# Django Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,.vercel.app

# Database (PostgreSQL)
# WSL/Ubuntu: Verwende deinen Linux-Benutzernamen (z.B. skymuss:password@localhost:5432/redflag-analyzer)
# Windows/Mac: Verwende postgres:postgres@localhost:5432/redflag-analyzer
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/redflag-analyzer

# Development
# Für lokale Entwicklung mit DEBUG=True

# Production (Vercel)
# Setze diese Variablen in Vercel Dashboard:
# - SECRET_KEY (generiere mit: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())')
# - DATABASE_URL (PostgreSQL Connection String von Vercel/Neon/Supabase)
# - DEBUG=False
# - ALLOWED_HOSTS=.vercel.app,yourdomain.com

# Email (SMTP) Settings
# Für Transactional Emails (Welcome, Password Reset, Drip Campaign)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=RedFlag Analyzer <noreply@redflag-analyzer.com>

# Beispiel Gmail App Password:
# 1. Google Account -> Security -> 2-Step Verification aktivieren
# 2. App passwords -> Generate new app password
# 3. Kopiere das 16-stellige Passwort hierher

# Alternativen:
# - SendGrid: EMAIL_HOST=smtp.sendgrid.net, EMAIL_HOST_USER=apikey, EMAIL_HOST_PASSWORD=your-sendgrid-api-key
# - Mailgun: EMAIL_HOST=smtp.mailgun.org, EMAIL_PORT=587
# - AWS SES: EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
