{
    "version": "2.0.0",
    "tasks": [
        // --- Kill Port 8000 (ohne sudo) ---
        {
            "label": "killPort8000",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "pids=$(lsof -t -i:8000) && [ -n \"$pids\" ] && kill -9 $pids 2>/dev/null || true"
            ],
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Kills user-owned processes on port 8000 (no sudo)"
        },

        // --- Install Requirements ---
        {
            "label": "installRequirements",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "source ${workspaceFolder}/django_app/venv/bin/activate && pip install -r ${workspaceFolder}/django_app/requirements.txt"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Installs Python dependencies from requirements.txt"
        },

        // --- Activate Venv ---
        {
            "label": "activateVenv",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "source ${workspaceFolder}/django_app/venv/bin/activate"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "isBackground": true
        },

        // --- Make Migrations ---
        {
            "label": "makeMigrations",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "cd ${workspaceFolder}/django_app && source venv/bin/activate && python manage.py makemigrations"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Creates new database migrations"
        },

        // --- Run Migrations ---
        {
            "label": "migrate",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "cd ${workspaceFolder}/django_app && source venv/bin/activate && python manage.py migrate"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Applies database migrations"
        },

        // --- Run Django Server ---
        {
            "label": "runServer",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "cd ${workspaceFolder}/django_app && source venv/bin/activate && python manage.py runserver"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "isBackground": true,
            "detail": "Starts Django development server"
        },

        // --- Compound Task: Full Django Startup ---
        {
            "label": "djangoStart",
            "dependsOrder": "sequence",
            "dependsOn": ["killPort8000", "installRequirements", "makeMigrations", "migrate", "runServer"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Full Django startup: Kill port ’ Install deps ’ Make migrations ’ Migrate ’ Run server"
        }
    ]
}
