{
    "version": "0.2.0",
    "configurations": [
        // --- Frontend: HTMX mit Firefox (Docker) ---
        {
            "name": "Launch RedFlag Frontend (Docker)",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost/",
            "webRoot": "${workspaceFolder}/django_app/templates/",
            "runtimeExecutable": "C:\\\\Program Files\\\\Mozilla Firefox\\\\firefox.exe",
            "runtimeArgs": [
                "--start-debugger-server",
                "127.0.0.1:9222",
                "--no-remote",
                "--headless=false",
                "--disable-extensions",
                "--disable-web-security"
            ],
            "firefoxExtendedDebugging": true,
            "port": 9222,
            "host": "127.0.0.1",
            "preLaunchTask": "dockerStart"
        },

        // --- Attach zu Firefox (Docker) ---
        {
            "name": "Attach to Firefox (Docker)",
            "type": "firefox",
            "request": "attach",
            "runtimeExecutable": "C:\\\\Program Files\\\\Mozilla Firefox\\\\firefox.exe",
            "port": 9222,
            "host": "127.0.0.1",
            "reAttach": true,
            "pathMappings": [
                {
                    "url": "http://localhost",
                    "path": "${workspaceFolder}/django_app"
                }
            ]
        },

        // --- Launch Admin (Docker) ---
        {
            "name": "Launch Admin (Docker)",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost/admin/",
            "webRoot": "${workspaceFolder}/django_app",
            "runtimeExecutable": "C:\\\\Program Files\\\\Mozilla Firefox\\\\firefox.exe",
            "runtimeArgs": [
                "--start-debugger-server",
                "127.0.0.1:9222",
                "--no-remote"
            ],
            "firefoxExtendedDebugging": true,
            "port": 9222,
            "preLaunchTask": "dockerStart"
        },

        // --- Launch Test User Login ---
        {
            "name": "Launch Test Login (Docker)",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost/accounts/dev-login/",
            "webRoot": "${workspaceFolder}/django_app",
            "runtimeExecutable": "C:\\\\Program Files\\\\Mozilla Firefox\\\\firefox.exe",
            "runtimeArgs": [
                "--start-debugger-server",
                "127.0.0.1:9222",
                "--no-remote"
            ],
            "firefoxExtendedDebugging": true,
            "port": 9222,
            "preLaunchTask": "dockerStart"
        }
    ]
}